<?php

namespace App;

use function App\render;

class CombinedResponder
{
    private $counter;
    private $todos;

    public function __construct()
    {
        $this->counter = new CounterResponder();
        $this->todos = new TodosResponder();
    }

    public function render()
    {
        return (
            <div>
                {$this->counter->render()}
                {$this->todos->render()}
            </div>
        );
    }
}
